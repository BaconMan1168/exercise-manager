<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Muscle Home Page</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <!-- Sidebar -->
    <div class="navbar left-elements">
      <%- include('navbar', { links: links }) %>
    </div>

    <!-- Main Section -->
    <div class="right-elements">
      <div class="header">
        <%- include('header', { pageName: "Muscle Home Page" }) %>
      </div>

      <main class="muscle-home-main">

        <!-- Two-column layout for forms and table -->
        <div class="muscle-layout">

          <!-- Left side: Search + table -->
          <div class="muscle-left">
            <div class="form-section">
              <h2 class="form-title">Search Muscles</h2>
              <form action="/muscles/search" method="GET">
                <label for="searchPhrase">Name:</label>
                <input type="text" name="phrase" id="searchPhrase" required>

                <div class="radio-group">
                  <label for="muscleMode">
                    <input type="radio" name="mode" id="muscleMode" value="muscle" checked> Search by Muscle Name
                  </label>

                  <label for="exerciseMode">
                    <input type="radio" name="mode" id="exerciseMode" value="exercise"> Search by Use in An Exercise
                  </label>
                </div>

                <button>Search</button>
              </form>
            </div>

            <div class="form-section">
              <h2>Muscle List</h2>
              <div class="table-container" style="max-height: 300px; overflow-y: auto;">
                <table>
                  <thead>
                    <tr><th>Muscle Name</th></tr>
                  </thead>
                  <tbody>
                    <% muscles.forEach(m => { %>
                      <tr><td><%= m.muscle_group_name %></td></tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <!-- Right side: Add, Delete, Update -->
          <div class="muscle-right">
            <div class="form-section">
              <h2 class="form-title">Add Muscle</h2>
              <form action="/muscles/add" method="POST">
                <label for="createPhrase">Muscle Name:</label>
                <input type="text" name="muscleName" id="createPhrase" required>
                <button>Create Muscle</button>
              </form>
            </div>

            <div class="form-section">
              <h2 class="form-title">Delete Muscle</h2>
              <form action="/muscles/delete?_method=DELETE" method="POST">
                <label for="deletePhrase">Muscle Name:</label>
                <input type="text" name="muscleName" id="deletePhrase" required>
                <button>Delete Muscle</button>
              </form>
            </div>

            <div class="form-section">
              <h2 class="form-title">Update Muscle</h2>
              <form action="/muscles/update?_method=PUT" method="POST">
                <label for="muscleToUpdate">Muscle To Update:</label>
                <input type="text" name="currName" id="muscleToUpdate" required>

                <label for="newMuscleName">New Muscle Name:</label>
                <input type="text" name="newName" id="newMuscleName" required>

                <button>Update Muscle</button>
              </form>
            </div>
          </div>

        </div>
      </main>
    </div>
  </div>
</body>
</html>