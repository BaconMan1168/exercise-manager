<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Exercise Info Home Page</title>
    </head>
    <body>
        <div class="container">
            <div class="navbar left-elements">
                <%- include('navbar', { links: links }) %>
            </div>

            <div class="right-elements">
                <div class="header">
                    <%- include('header', { pageName: "Exercise Info Home Page"}) %>
                </div>

                <main class="exercise-pair-main">
                    <div style="max-height: 300px; overflow-y: auto;">
                        <table>
                            <thead>
                            <tr>
                                <th>Exercise Name</th>
                                <th>Muscles Trained</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% pairs.forEach(p => { %>
                                <tr>
                                    <td><%= p.Exercise_name %></td>
                                    <td><%= p.Trained_Muscles %></td>
                                </tr>
                            <% }) %>
                            </tbody>
                        </table>
                    </div>

                    //form validation needed

                    <div class="form-section">
                        <h2 class="form-title">Add Muscle</h2>
                        <form action="/muscles/add" method="POST">
                            <label for="createPhrase">Muscle Name:</label>
                            <input type="text" name="muscleName" id="createPhrase" required>

                            <button>Create Muscle</button>
                        </form>
                    </div>
                </main>
            </div>
        </div>
    </body>
</html>