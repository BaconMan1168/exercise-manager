<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Exercise Info Home Page</title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <div class="container">
            <div class="navbar left-elements">
                <%- include('navbar', { links: links }) %>
            </div>

            <div class="right-elements">
                <div class="header">
                    <%- include('header', { pageName: "Exercise Info Home Page"}) %>
                </div>

                <main class="exercise-pair-main">
                    <div class="exercise-pair-layout">
                        <!-- Left column -->
                        <div class="exercise-pair-left">
                            <div class="table-container" style="max-height: 300px; overflow-y: auto;">
                                <table>
                                    <thead>
                                    <tr>
                                        <th>Exercise Name</th>
                                        <th>Muscles Trained</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% pairs.forEach(p => { %>
                                        <tr>
                                            <td><%= p.Exercise_Name %></td>
                                            <td><%= p.Trained_Muscles %></td>
                                        </tr>
                                    <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Right column -->
                        <div class="exercise-pair-right">
                            <div class="form-section">
                                <h2 class="form-title">Add Exercise-Muscle Pair</h2>
                                <form action="/pairs/add" method="POST">
                                    <label for="createPhrase">Exercise Name:</label>
                                    <input type="text" name="exerciseName" id="createPhrase" required>

                                    <label for="musclesUsed">Muscles Used (single space separated, no commas)</label>
                                    <input type="text" name="musclesUsed" id="musclesUsed" required>

                                    <button>Create Pair</button>
                                </form>
                            </div>

                            <div class="form-section">
                                <h2 class="form-title">Delete Exercise-Muscle Pair</h2>
                                <form action="/pairs/delete?_method=DELETE" method="POST">
                                    <label for="exerciseNamePairDelete">Exercise Name</label>
                                    <input type="text" name="exerciseToDelete" id="exerciseNamePairDelete" required>

                                    <label for="muscleNamePairDelete">Muscle Name</label>
                                    <input type="text" name="muscleToDelete" id="muscleNamePairDelete" required>

                                    <button>Delete Pair</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </body>
</html>