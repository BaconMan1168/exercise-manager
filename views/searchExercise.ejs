<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Results</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <!-- Sidebar -->
    <div class="navbar left-elements">
      <%- include('navbar', { links: links }) %>
    </div>

    <!-- Right content -->
    <div class="right-elements">
      <div class="header">
        <%- include('header', { pageName: "Exercise Search" }) %>
      </div>

      <main class="exercise-search-main">
        <div class="exercise-search-layout">
          
          <!-- Left column: table of results -->
          <div class="exercise-search-left">
            <% if (mode === 'byExerciseName') { %>
              <h1>Exercises with "<%= title %>"</h1>
            <% } else if (mode === 'byMusclesUsed') { %>
              <h1>Exercises which use "<%= title %>"</h1>
            <% } %>

            <div class="table-container" style="max-height: 300px; overflow-y: auto;">
              <table cellpadding="5">
                <thead>
                  <tr>
                    <% if (mode === 'byExerciseName') { %>
                      <th>Exercise Name</th>
                    <% } else if (mode === 'byMusclesUsed') { %>
                      <th>Muscle Name</th>
                      <th>Exercise Name</th>
                    <% } %>
                  </tr>
                </thead>
                <tbody>
                  <% if (rows.length === 0) { %>
                    <tr>
                      <td colspan="<%= mode === 'byExerciseName' ? 1 : 2 %>">No results found.</td>
                    </tr>
                  <% } else { %>
                    <% rows.forEach(r => { %>
                      <tr>
                        <% if (mode === 'byExerciseName') { %>
                          <td><%= r.exercise_name %></td>
                        <% } else if (mode === 'byMusclesUsed') { %>
                          <td><%= r.muscle_group_name %></td>
                          <td><%= r.exercise_name %></td>
                        <% } %>
                      </tr>
                    <% }) %>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>

          <!-- Right column: search form -->
          <div class="exercise-search-right">
            <div class="form-section">
              <h2 class="form-title">Search Again</h2>
              <form action="/exercises/search" method="GET">
                <label for="searchPhrase">Name:</label>
                <input type="text" name="phrase" id="searchPhrase" required>

                <div class="radio-group">
                  <label>
                    <input type="radio" name="mode" value="exercise" <%= mode==='byExerciseName'?'checked':'' %>>
                    Search by Exercise Name
                  </label>

                  <label>
                    <input type="radio" name="mode" value="muscle" <%= mode==='byMusclesUsed'?'checked':'' %>>
                    Search by Muscle Used
                  </label>
                </div>

                <button>Search</button>
              </form>
            </div>
          </div>

        </div>
      </main>
    </div>
  </div>
</body>
</html>
